
<%= simple_form_for(@product_size_color) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :color %>
    <%= f.association :size %>
    <%= f.input :amount %>
    <%= f.association :pack %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
