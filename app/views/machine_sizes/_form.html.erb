<%= simple_form_for(@machine_size, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.label :devision, 'Выберите подразделение' %>
    <%= f.select :devision, [16, 19], {}, {class: 'form-control', prompt: 'Выберите подразделение'} %>
    <br>
    <% unless @machine_size.user.nil? %>
      <%= f.association :user, collection: User.оператор, selected: @machine_size.user.id, class: 'form form-control', include_blank: false, label: 'Выберите оператора' %>
    <% else %>
      <%= f.association :user, collection: User.оператор.left_outer_joins(:machine_size).where(machine_sizes: { id: nil }).order(:name).pluck(:name, :id), class: 'form form-control', include_blank: false, label: 'Select operator' %>
    <% end %>
  </div>
  <br>
  <div class="form-group">
    <%= f.button :submit,'совершить', class: 'btn btn-primary' %>
    <%= link_to "Отмена", machine_sizes_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
