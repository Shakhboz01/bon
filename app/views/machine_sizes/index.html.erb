<div class="container my-5">
  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">станки</h3>
      <%= link_to 'Добавить новый', new_machine_size_path, class: 'btn btn-primary' %>
    </div>
    <div class="card-body">
      <% if @machine_sizes.any? -%>
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>оператор</th>
              <th>подразделение</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @machine_sizes.each do |machine_size| -%>
              <tr>
                <td><%= machine_size.id %></td>
                <td><%= machine_size.user.name %></td>
                <td><%= machine_size.devision %></td>
                <td>
                  <%= clink_to 'редактировать', edit_machine_size_path(machine_size), 'fa-edit' %>
                </td>
              </tr>
            <% end -%>
          </tbody>
        </table>
      <% else -%>
        <p class="text-center">пусто</p>
      <% end -%>
    </div>
  </div>
</div>
