
<%= simple_form_for(@product_price, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :product, label: 'товар' %>
    <%= f.input :price, label: 'цена' %>
  </div>

  <div class="form-group">
    <%= f.button :submit,'совершить', class: 'btn btn-primary' %>
    <%= link_to "Отмена", product_prices_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
