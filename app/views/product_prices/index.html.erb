<div class="container my-5">
  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">Цены</h3>
      <%= link_to 'Добавить новый', new_product_price_path, class: 'btn btn-primary' %>
    </div>
    <div class="card-body">
      <% if @product_prices.any? -%>
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Цена</th>
              <th>товар/сырья</th>
              <th>Создано в</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @product_prices.each do |product_price| -%>
              <tr>
                <td><%= product_price.id %></td>
                <td><%= num_to_usd(product_price.price) %></td>
                <td><%= link_to product_price.product.name, product_path(product_price.product) %></td>
                <td><%= product_price.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
                <td>
                  <%= clink_to 'редактировать', edit_product_price_path(product_price), 'fa-edit' %>
                  <%= cdlink_to 'удалить', product_price %>
                </td>
              </tr>
            <% end -%>
          </tbody>
        </table>
      <% else -%>
        <p class="text-center">Цен нет.</p>
      <% end -%>
    </div>
  </div>
</div>
