<%= simple_form_for(@product, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-group">
    <%= f.label :amount_left, 'Количество оставшегося товара' %>
    <%= f.number_field :amount_left, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :name, 'Название' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.button :submit,'совершить', class: 'btn btn-primary' %>
    <%= link_to "Отмена", products_path, class: 'btn btn-secondary' %>
  </div>
<% end %>