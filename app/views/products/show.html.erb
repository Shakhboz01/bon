<div class="container my-5">
  <div class="card shadow">
    <div class="card-header">
      <h3 class="card-title font-weight-bold">Product Details</h3>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-4">
          <p class="font-weight-bold">Name:</p>
        </div>
        <div class="col-md-8">
          <p><%= @product.name %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <p class="font-weight-bold">Amount Left:</p>
        </div>
        <div class="col-md-8">
          <p><%= @product.amount_left %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <p class="font-weight-bold">Created At:</p>
        </div>
        <div class="col-md-8">
          <p><%= @product.created_at %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <p class="font-weight-bold">Updated At:</p>
        </div>
        <div class="col-md-8">
          <p><%= @product.updated_at %></p>
        </div>
      </div>

      <div class="row mt-4">
        <div class="d-flex justify-content-start col-md-12">
          <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-primary mr-2' %>
          <%= link_to 'Back', products_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>
