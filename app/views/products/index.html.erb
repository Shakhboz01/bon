<div class="container my-5">
  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">Товары</h3>
      <%= link_to 'Добавить новый', new_product_path, class: 'btn btn-primary' %>
    </div>
    <div class="card-body">
      <% if @products.any? -%>
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>Название</th>
              <th>Количество оставшегося товара</th>
              <th>Создан в</th>
              <th>Обновлено в</th>
              <th>Действия</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| -%>
              <tr>
                <td><%= product.name %></td>
                <td><%= product.amount_left %></td>
                <td><%= product.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
                <td><%= product.updated_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
                <td>
                  <%= clink_to 'показать', product, 'fa-eye' %>
                  <%= clink_to 'редактировать', edit_product_path(product), 'fa-edit' %>
                  <%= cdlink_to 'удалить', product %>
                </td>
              </tr>
            <% end -%>
          </tbody>
        </table>
      <% else -%>
        <p class="text-center">Товаров нет.</p>
      <% end -%>
    </div>
  </div>
</div>
