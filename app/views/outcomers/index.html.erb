<div class="container my-5">
  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h1><%= @role.capitalize %></h1>
      <%= link_to 'Добавить новый', new_outcomer_path(role: @role), class: 'btn btn-primary' %>
    </div>
    <div class="card-body">
      <% if @outcomers.any? -%>
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Имя</th>
              <th>Создано в</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @outcomers.each do |outcomer| -%>
              <tr>
                <td><%= outcomer.id %></td>
                <td><%= outcomer.name %></td>
                <td><%= outcomer.created_at.strftime('%Y-%m-%d %H:%M') %></td>
                <td>
                  <%= clink_to '', outcomer_path(outcomer), 'fa-search' %>
                  <%= clink_to 'редактировать', edit_outcomer_path(outcomer), 'fa-edit' %>
                </td>
              </tr>
            <% end -%>
          </tbody>
        </table>
      <% else -%>
        <p class="text-center">Цен нет.</p>
      <% end -%>
    </div>
  </div>
</div>
