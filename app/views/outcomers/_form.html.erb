<%= simple_form_for(@outcomer, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: 'имя' %>
    <%= f.input :role, value: :role, as: :hidden %>
  </div>

  <div class="form-group">
    <%= f.button :submit,'совершить', class: 'btn btn-primary' %>
    <%= link_to "Отмена", outcomers_path(role: :role), class: 'btn btn-secondary' %>
  </div>
<% end %>
