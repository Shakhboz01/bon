<div class="container my-5">
  <div class="card shadow">
    <div class="card-header">
      <h3 class="card-title font-weight-bold">Клиент</h3>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-4">
          <p class="font-weight-bold">Роль:</p>
        </div>
        <div class="col-md-8">
          <p><%= @outcomer.role %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <p class="font-weight-bold">имя:</p>
        </div>
        <div class="col-md-8">
          <p><%= @outcomer.name %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <p class="font-weight-bold">Создан в:</p>
        </div>
        <div class="col-md-8">
          <p><%= @outcomer.created_at %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <p class="font-weight-bold">Обновлено в:</p>
        </div>
        <div class="col-md-8">
          <p><%= @outcomer.updated_at %></p>
        </div>
      </div>

      <div class="row mt-4">
        <div class="d-flex justify-content-start col-md-12">
          <%= clink_to 'редактировать', edit_outcomer_path(@outcomer), 'fa-edit' %>
          <%= clink_to 'Назад', outcomers_path, 'fa-circle-arrow-left' %>
        </div>
      </div>
    </div>
  </div>
</div>
