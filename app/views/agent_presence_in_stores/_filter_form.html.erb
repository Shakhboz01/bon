<div class='card' id='filter-toggle'>
  <%= search_form_for q, url: url, html: { class: 'form form-horizontal filter-form' } do |f| %>
    <div class="card shadow-lg">
      <div class='row card-body'>
        <div class="form-group col-xs-12 col-sm-2">
          <%= f.label :created_at_gteq, 'От:', class: 'control-label' %>
          <%= f.text_field :created_at_gteq, value: @q.created_at_gteq, class: 'datepicker form-control', autocomplete: :off %>
        </div>
        <div class="form-group col-xs-12 col-sm-2">
          <%= f.label :created_at_lteq, 'До:', class: 'control-label' %>
          <%= f.text_field :created_at_lteq, value: @q.created_at_lteq, class: 'datepicker form-control', autocomplete: :off %>
        </div>
        <div class="form-group col-xs-12 col-sm-2">
          <%= f.label :status_eq, 'Статус', class: 'control-label' %>
          <%= f.select :status_eq, AgentPresenceInStore.statuses.keys.map { |unit| [AgentPresenceInStore.human_attribute_name("unit.#{unit}"), unit] }, {include_blank: true}, class: 'form-control' %>
        </div>
        <div class="form-group col-xs-12 col-sm-2">
          <%= f.label :distance_in_meters_lteq, 'Дистанция меньше чем', class: 'control-label' %>
          <%= f.number_field :distance_in_meters_lteq, class: 'form-control' %>
        </div>
        <div class="form-group col-xs-12 col-sm-2">
          <%= f.label :buyer_id_eq, 'Покупатель', class: 'control-label' %>
          <%= f.select :buyer_id_eq, Buyer.pluck(:name, :id), {include_blank: true}, class: 'form-control' %>
        </div>
        <div class="form-group col-xs-12 col-sm-2">
          <%= f.label :user_id_eq, 'Агент', class: 'control-label' %>
          <%= f.select :user_id_eq, User.агент.pluck(:name, :id), {include_blank: true}, class: 'form-control' %>
        </div>
      </div>
      <div class="row card-body">
        <div class="form-group col-xs-12 col-sm-6">
          <%= f.submit 'Фильтр', class: 'btn btn-primary' %>
          <%= link_to 'Очистить', request.path, class: 'btn btn-default' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
