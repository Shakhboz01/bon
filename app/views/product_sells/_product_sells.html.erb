<%= turbo_frame_tag 'product_sells' do %>
  <% if defined?(shrink) %>
    <div class='d-flex table-warning justify-content-around'>
      <% rate = CurrencyRate.last.rate %>
      <% unless defined?(datetime) %>
        <b>UMUMIY TOVARLAR SONI: <%= product_sells.sum(:amount) %></b>
      <% end %>

      <b>Jami: <%= num_to_usd sale.total_price %></b>
      <% if defined?(total_paid) %>
        <b>Jami to'landi: <%= num_to_usd(total_paid) %></b>
      <% end %>
      <% if defined?(datetime) %>
        <b>Sana: <%= strf_datetime(datetime, true)  %></b>
      <% end %>

      <% if defined?(buyer) %>
        <b>Jami qarzi bilan: <%= num_to_usd(buyer.calculate_debt_in_uzs) %></b>
      <% end %>
    </div>
  <% end %>
  <table class="table table-sm table-hover table-bordered table-striped">
    <thead>
      <tr>
        <% unless defined?(shrink) %>
          <th>ID</th>
          <th>Mijoz</th>
        <% end %>
        <th>Tovar</th>
        <th>Soni</th>
        <th>Narxi</th>
        <th>Jami</th>
        <% unless defined?(shrink) %>
          <th>Sotilgan sana</th>
        <% end %>
        <th colspan="3"></th>
      </tr>
    </thead>
      <tbody>
        <% product_sells.order(created_at: :desc).each do |product_sell| %>
          <tr>
            <% unless defined?(shrink) %>
              <td><%= product_sell.id %></td>
              <td><%= product_sell.buyer.name %></td>
            <% end %>
            <td>
              <% if product_sell.product.nil? %>
                <%= product_sell.pack.name %>
              <% else %>
                <%= product_sell.product.name %>
              <% end %>
            </td>
            <td><%= product_sell.amount.to_f %></td>
            <td><%= num_to_usd product_sell.sell_price %></td>
            <td><%= num_to_usd(product_sell.sell_price * product_sell.amount.to_f) %></td>
            <% unless defined?(shrink) %>
            <% end %>
            <% unless defined?(shrink) %>
              <td><%= strf_datetime(product_sell.created_at) %></td>
            <% end %>
            <td><%= cdlink_to 'Удалить', product_sell %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
<% end %>
