<%= turbo_frame_tag 'product_sells' do %>
  <table class="table table-sm table-hover table-bordered table-striped">
    <thead>
      <tr>
        <% unless defined?(shrink) %>
          <th>ID</th>
          <th>Mijoz</th>
        <% end %>
        <th>Tovar</th>
        <th>Soni</th>
        <th>Narxi</th>
        <th>Jami</th>
        <% unless defined?(shrink) %>
          <th>Sotilgan sana</th>
        <% end %>
        <th colspan="3"></th>
      </tr>
    </thead>
      <tbody>
        <% product_sells.order(created_at: :desc).each do |product_sell| %>
          <%= render 'product_sells/product_sell', product_sell: product_sell, shrink: shrink, show_delete_button: defined?(buyer) %>
        <% end %>
        <% if defined?(shrink) %>
          <tr>
            <th></th>
            <th><%= product_sells.sum(:amount) %></th>
            <th></th>
            <th><%= currency_convert sale.price_in_usd, sale.total_price %></th>
            <th></th>
          </tr>
        <% end %>
      </tbody>
  </table>
<% end %>
