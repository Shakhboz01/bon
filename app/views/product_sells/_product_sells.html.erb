<%= turbo_frame_tag 'product_sells' do %>
  <% if defined?(shrink) %>
    <div class='d-flex table-warning justify-content-around'>
      <% if defined?(datetime) %>
        <b>Sana: <%= strf_datetime(datetime, true)  %></b>
      <% end %>

      <% unless defined?(datetime) %>
        <b>UMUMIY TOVARLAR SONI: <%= product_sells.sum(:amount) %></b>
      <% end %>

      <b>Jami: <%= num_to_usd sale.total_price %></b>
      <% if defined?(total_paid) %>
        <b>Jami to'landi: <%= num_to_usd(total_paid) %></b>
      <% end %>

      <% if defined?(buyer) %>
        <b>Jami qarzi bilan: <%= num_to_usd(buyer.calculate_debt_in_uzs) %></b>
      <% end %>
    </div>
  <% end %>
  <table class="table table-sm table-hover table-bordered table-striped">
    <thead>
      <tr>
        <% unless defined?(shrink) %>
          <th>ID</th>
          <th>Mijoz</th>
        <% end %>
        <th>Tovar</th>
        <th>Soni</th>
        <th>Narxi</th>
        <th>Jami</th>
        <% unless defined?(shrink) %>
          <th>Sotilgan sana</th>
        <% end %>
        <th colspan="3"></th>
      </tr>
    </thead>
      <tbody>
        <% product_sells.order(created_at: :desc).each do |product_sell| %>
          <%= render 'product_sells/product_sell', product_sell: product_sell, shrink: shrink %>
        <% end %>
      </tbody>
  </table>
<% end %>
