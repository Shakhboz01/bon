<div class='row'>
  <div class='col-sm-6'>
    <h3 class='text-center'>Доходы</h3>
    <table class='table shadow table-hover table-striped'>
      <thead>
        <tr>
          <th>ID</th>
          <th>Покупатель</th>
          <th>Стоимость</th>
          <th>Оплачен</th>
        </tr>
      </thead>
      <tbody>
        <% @incomes.each do |income| %>
          <%= filter_income(income) %>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class='col-sm-6'>
    <h3 class='text-center'>Расходы</h3>
    <table class='table shadow table-hover table-striped'>
      <thead>
        <tr>
          <th>ID</th>
          <th>Тип</th>
          <th>Стоимость</th>
          <th>Оплачен</th>
          <th>Поставщик</th>
          <th>Кол.</th>
        </tr>
      </thead>
      <tbody>
        <% @expenditures.each do |expenditure| %>
          <%= filter_expenditure(expenditure) %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
