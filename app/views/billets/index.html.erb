<div class="container my-5">
  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <%= link_to 'Добавить новый', new_billet_path, class: 'btn btn-primary' %>
    </div>

    <%= render 'filter_form', url: request.path, q: @q, type: 'other' %>

    <div class="card-body">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th><%= sort_link @q, :id, 'ID' %></th>
              <th><%= sort_link @q, :user_id, 'Исполнитель' %></th>
              <th><%= sort_link @q, :waste_paper_proprotion_id, 'Пропорция' %></th>
              <th><%= sort_link @q, :quantity, 'Количество' %></th>
              <th><%= sort_link @q, :created_at, 'Создано в' %></th>
            </tr>
          </thead>
          <tbody>
            <% @billets.each do |billet| -%>
              <tr>
                <td><%= billet.id %></td>
                <td><%= billet.user.name %></td>
                <td><%= billet.waste_paper_proportion.name %></td>
                <td><%= billet.quantity %></td>
                <td><%= billet.created_at.strftime('%Y-%m-%d %H:%M') %></td>
              </tr>
            <% end -%>
          </tbody>
        </table>
        <%= paginate @billets %>
    </div>
  </div>
</div>
