<%= simple_form_for(@billet, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-group">
    <%= f.label :quantity, 'Количество' %>
    <%= f.number_field :quantity, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.association :waste_paper_proportion, collection: WastePaperProportion.pluck(:name, :id), class: 'form form-control', include_blank: false, label: 'Пропорция' %>
  </div>

  <div class="form-group">
    <%= f.button :submit,'совершить', class: 'btn btn-primary' %>
    <%= link_to "Отмена", billets_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
