<div style='background-color: #80d3ff87;' class="container shadow">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class='text-center'><%= Outcomer.find(params[:outcomer_id])&.name&.upcase %></h2>
      <%= simple_form_for :new_income, url: new_income_incomes_path do |f| %>
        <table class='table shadow table-hover'>
          <thead>
            <tr>
              <th>имя</th>
              <th>количество</th>
            </tr>
          </thead>
          <tbody>
              <% Product.where(weight: 3).each do |product| %>
                <div style=' margin: 19px auto; justify-content: space-between;' class='shadow flexs'>
                  <tr>
                    <td><h4><%= product&.name&.upcase %></h4></td>
                    <td>
                      <%= f.input ('quantity_' + product.id.to_s).to_sym, input_html: { class: 'form-control', placeholder: 'Количество' }, label: false %>
                    </td>
                  </tr>
                </div>
              <% end %>
          </tbody>
        </table>
        <%= f.input :outcomer_id, input_html: {value: params[:outcomer_id]}, as: :hidden %>
        <%= f.input :price, collection: @product_prices, input_html: { class: 'form-control'}, include_blank: false, label: 'Цена' %>
        <%= f.input :total_paid, input_html: { class: 'form-control' }, label: 'Всего выплачено', as: :numeric %>
        <div class="form-group text-right">
          <%= f.submit "Создать", class: 'btn btn-lg btn-primary text-center float-right' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
