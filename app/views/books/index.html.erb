<div class="container">
  <h1>Books</h1>

  <%= render 'filter_form', url: request.path, q: @q %>

  <table class="table table-striped table-hover shadow">
    <thead>
      <tr>
        <th><%= sort_link(@q, :id, 'Blocked email') %></th>
        <th><%= sort_link(@q, :name, 'name') %></th>
        <th><%= sort_link(@q, :sold, 'Sold') %></th>
        <th><%= sort_link(@q, :active, 'active') %></th>
        <th><%= sort_link(@q, :created_at, 'Создан в:') %></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.id %></td>
          <td><%= book.name %></td>
          <td><%= book.sold %></td>
          <td><%= book.active %></td>
          <td><%= book.created_at %></td>
          <td><%= clink_to 'Посмотреть', book, 'fa-search' %></td>
          <td><%= clink_to 'редактировать', edit_book_path(book), 'fa-edit' %></td>
          <td><%= cdlink_to 'Удалить', book %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Добавить новое", new_book_path, class: "btn btn-primary" %>
</div>