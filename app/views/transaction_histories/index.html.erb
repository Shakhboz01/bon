<div class="container my-5">
  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">История пополнений</h3>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Дебетор</th>
              <th>сумма</th>
              <th>Создано в</th>
              <th>Исполнитель</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @transaction_histories.each do |transaction_history| -%>
              <tr>
                <td><%= transaction_history.id %></td>
                <td><%= @debetor %></td>
                <td><%= num_to_usd(transaction_history.amount) %></td>
                <td><%= transaction_history.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
                <td><%= transaction_history.user.name %></td>
              </tr>
            <% end -%>
          </tbody>
        </table>

        <%= link_to 'Перейти на главную', main_page_path %>
    </div>
  </div>
</div>
