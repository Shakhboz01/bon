
<%= simple_form_for(transaction_history) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :sale, as: :hidden %>
    <%= f.association :delivery_from_counterparty, as: :hidden %>
    <%= f.association :expenditure, as: :hidden %>
    <%= f.input :price, label: 'Введите цену', :autofocus => true %>
    <%= f.input :payment_type, label: 'Тип оплаты', collection: TransactionHistory.payment_types.keys.map { |unit| [Sale.human_attribute_name("unit.#{unit}"), unit] }, include_blank: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Завершить' %>
  </div>
<% end %>
