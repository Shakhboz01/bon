<div class='sale_from_local_services/filter_form' id='filter-toggle'>
  <h2 class='p-2'>Фильтр:</h2>
  <%= search_form_for q, url: url, html: { class: 'form form-horizontal filter-form' } do |f| %>
    <div class="shadow-lg">
      <div class='row card-body'>
        <div class="form-group col-xs-12 col-sm-2">
          <%= f.label :created_at_gteq, 'От:', class: 'control-label' %>
          <%= f.text_field :created_at_gteq, value: q.created_at_gteq, class: 'datepicker form-control', autocomplete: :off %>
        </div>
        <div class="form-group col-xs-12 col-sm-2">
          <%= f.label :created_at_lteq, 'До:', class: 'control-label' %>
          <%= f.text_field :created_at_lteq, value: q.created_at_lteq, class: 'datepicker form-control', autocomplete: :off %>
        </div>
        <div class="form-group col-xs-12 col-sm-2">
          <%= f.label :status_eq, "Статус", class: 'control-label' %>
          <%= f.select :status_eq, Sale.statuses, {include_blank: true}, class: 'form-control' %>
        </div>
        <div class="form-group col-xs-12 col-sm-2">
          <%= f.label :buyer_id_eq, 'Клиент', class: 'control-label' %>
          <%= f.select :buyer_id_eq, Buyer.pluck(:name, :id) , {include_blank: true}, class: 'form-control' %>
        </div>
        <div class="form-group col-xs-12 col-sm-2">
          <%= f.label :diller_user_id_eq, 'Дилер', class: 'control-label' %>
          <%= f.select :diller_user_id_eq, User.active.дилер.pluck(:name, :id) , {include_blank: true}, class: 'form-control' %>
        </div>
        <div class="form-group col-xs-12 col-sm-2">
          <%= f.label :agent_user_id_eq, 'Агент', class: 'control-label' %>
          <%= f.select :agent_user_id_eq, User.active.агент.pluck(:name, :id) , {include_blank: true}, class: 'form-control' %>
        </div>
      </div>
      <div class="row card-body">
        <div class="form-group col-xs-12 col-sm-6">
          <%= f.submit 'Фильтр', class: 'btn btn-primary' %>
          <%= link_to 'Очистить', request.path, class: 'btn btn-default' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

