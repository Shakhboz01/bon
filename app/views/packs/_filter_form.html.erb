<%= search_form_for @q, url: url, html: { class: 'form form-horizontal filter-form' } do |f| %>
  <div class="card shadow-lg">
    <div class="row">
      <div class="form-group col-xs-12 col-sm-4">
        <%= f.label :name_cont, 'Tovar nomi:', class: 'control-label' %>
        <%= f.text_field :name_cont, class: 'form-control', autocomplete: :off %>
      </div>
      <div class="form-group col-xs-12 col-sm-2">
        <%= f.label :code_cont, 'Tovar kodi:', class: 'control-label' %>
        <%= f.text_field :code_cont, class: 'form-control', autocomplete: :off %>
      </div>
      <div class="form-group col-xs-12 col-sm-2">
        <%= f.label :product_category_id_eq, 'Assortiment:', class: 'control-label' %>
        <%= f.select :product_category_id_eq, ProductCategory.pluck(:name, :id), {include_blank: true}, class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-xs-12 col-sm-6">
        <%= f.submit 'Фильтр', class: 'btn btn-primary' %>
        <%= link_to 'Очистить', request.path, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
<% end %>
