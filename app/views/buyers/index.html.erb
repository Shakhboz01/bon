<div class="container my-5">
  <%= render 'filter_form', q: @q, url: request.path %>
  <div class="card shadow-lg">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">Клиенты</h3>
      <div class='btn-group'>
        <%= link_to 'Добавить покупателя', new_buyer_path, class: "btn btn-success min-width-btn" %>
        <%= link_to statistics_buyers_path, class: "btn btn-primary min-width-btn" do %>
          Статистика <i class="fa-solid fa fa-chart-pie"></i>
        <% end %>
      </div>
    </div>

    <div class="card-body">
      <%= render 'buyers', buyers: @buyers %>
    </div>
    <%= paginate @buyers %>
  </div>
</div>
