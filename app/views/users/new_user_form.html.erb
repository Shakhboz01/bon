<div class="container">
  <h1>Создание сотрудника</h1>

  <%= form_with(model: @user, url: auto_user_creation_users_path) do |form| %>
    <div class="form-group">
      <%= form.label :password, 'Введите новый пароль' %>
      <%= form.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :password_confirmation, 'Повторите пароль' %>
      <%= form.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :name, 'Имя сотрудника' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :allowed_to_use, 'Может использовать это приложение?' %>
      <%= form.check_box :allowed_to_use, {} %>
    </div>

    <div class="form-group">
      <%= form.label :role, 'Роль' %>
      <%= form.select :role, User.roles.keys, {}, class: 'form-control' %>
    </div>
    <div class="form-group">
      <br/><%= form.submit 'Сохранить', class: 'btn btn-primary' %>
    </div>
  <% end %>
  <%= link_to 'Назад', users_path, class: "btn btn-secondary" %>
</div>
