<div class='container'>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>
    <%= f.label :email, 'Выберите имя:' %>
    <%= f.select :email, options_for_select(@collection), { include_blank: false, label: 'Выберите имя', required: false, autofocus: true, multiple: true }, { class: 'form-control', size: @collection.count } %>

    <br>
    <%= f.input :password, label: 'Введите пароль:', required: false, input_html: { autocomplete: "current-password", class: 'form-control' } %>

    <div class="form-group">
      <%= f.button :submit, "Войти", class: 'btn btn-md btn-primary ' %>
    </div>
  <% end %>
</div>
