<h2>Вход</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>
  <%= f.input :email, label: 'Email', required: false, autofocus: true, input_html: { autocomplete: "email", class: 'form-control' } %>

  <%= f.input :password, label: 'Пароль', required: false, input_html: { autocomplete: "current-password", class: 'form-control' } %>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
      <%= f.input :remember_me, as: :boolean, label: 'Запомнить меня', input_html: { class: 'form-check-input' } %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.button :submit, "Войти", class: 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
