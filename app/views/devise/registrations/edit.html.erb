<h2>Редактирование <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, label: "Электронная почта" %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>В настоящее время ожидается подтверждение для: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "оставьте поле пустым, если не хотите изменять пароль",
                required: false,
                input_html: { autocomplete: "new-password" },
                label: "Новый пароль" %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" },
                label: "Подтверждение нового пароля" %>
    <%= f.input :current_password,
                hint: "нам нужен ваш текущий пароль, чтобы подтвердить ваши изменения",
                required: true,
                input_html: { autocomplete: "current-password" },
                label: "Текущий пароль" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Обновить" %>
  </div>
<% end %>

<h3>Отменить мой аккаунт</h3>

<div>Не довольны? <%= button_to "Отменить мой аккаунт", registration_path(resource_name), data: { confirm: "Вы уверены?", turbo_confirm: "Вы уверены?" }, method: :delete %></div>

<%= link_to "Назад", :back %>
