
<%= simple_form_for(provider) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Ism' %>
    <%= f.input :phone_number, label: 'Telefon raqam' %>
    <% unless provider.persisted? %>
      <%= f.input :debt_in_uzs, label: "So'mda qarzimiz", as: :numeric %>
      <%= f.input :debt_in_usd, label: 'Dollarda qarzimiz', as: :numeric %>
    <% end %>
    <%= f.input :comment, label: 'Komment' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Saqlash' %>
  </div>
<% end %>
