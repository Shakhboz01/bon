<div style='background-color: #80d3ff87;' class="container shadow">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= simple_form_for(@refund, html: { class: 'form-horizontal' }) do |f| %>
        <div class="form-group">
          <%= f.label :quantity, 'Количество' %>
          <%= f.number_field :quantity, class: 'form-control', focus: true %>
        </div>

        <div class="form-group">
          <%= f.button :submit,"совершить", class: 'btn btn-primary' %>
          <%= link_to "Отмена", refunds_path, class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
