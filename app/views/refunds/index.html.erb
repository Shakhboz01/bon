<div class="container my-5">
  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">Возвраты</h3>
      <%= link_to 'добавить', new_refund_path, class: 'btn btn-primary' %>
    </div>
    <div class="card-body">
        <div class='row'>
          <div class='shadow col-sm-6 col-xs-12'>
            <p><strong>количества возвратов: </strong><%= @sum %></p>
          </div>
        </div>
        <br>
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>товар</th>
              <th>Кол.</th>
              <th>Исполнитель</th>
              <th><%= sort_link @q, :created_at, 'Создано в' %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @refunds.each do |refund| -%>
              <tr>
                <td><%= refund.id %></td>
                <td><%= refund.product.name %></td>
                <td><%= refund.quantity %></td>
                <td><%= refund.user.name %></td>
                <td><%= refund.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
              </tr>
            <% end -%>
          </tbody>
        </table>
        <%= paginate @refunds %>
    </div>
  </div>
</div>
