<div style='background-color: #80d3ff87;' class="container shadow">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= simple_form_for :new_package, url: new_package_packages_path do |f| %>
        <% Product.where(weight: 3).order(:name).each do |product| %>
          <div style='padding: 0 10px; max-width: 530px; margin: 19px auto; justify-content: space-between' class='shadow flexs'>
            <h4><%= product&.name&.upcase %></h4>
            <%= f.input ('quantity_' + product.id.to_s).to_sym, as: :numeric, input_html: { class: 'form-control', placeholder: 'Количество' }, label: false %>
          </div>
        <% end %>
        <div style='max-width: 535px; margin: 19px auto' class='d-flex justify-content-center'>
          <%= f.submit "Создать", class: 'btn btn-lg btn-primary ' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
