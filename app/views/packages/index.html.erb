<div class="container my-5">
  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">Упаковки</h3>
      <%= link_to 'Добавить новый', new_product_price_path, class: 'btn btn-primary' %>
    </div>
    <%= render 'filter_form', url: request.path, q: @q, type: 'other' %>
    <div class="card-body">
      <% if @packages.any? -%>
        <strong>Итого количество упаковок: <%= @total_package_sum %></strong>
        <br>
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Упаковчик</th>
              <th>Кол. упаковка</th>
              <th>Товар</th>
              <th><%= sort_link @q, :created_at, 'Создано в' %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @packages.each do |package| -%>
              <tr>
                <td><%= package.id %></td>
                <td><%= package.user.name %></td>
                <td><%= package.quantity %></td>
                <td><%= package.product.name %></td>
                <td><%= package.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
                <td>
                  <%= clink_to 'редактировать', edit_package_path(package), 'fa-edit' %>
                  <%= cdlink_to 'delete', package %>
                </td>
              </tr>
            <% end -%>
          </tbody>
        </table>
        <%= paginate @packages %>
      <% else -%>
        <p class="text-center">Упаковок нет.</p>
      <% end -%>
    </div>
  </div>
</div>
